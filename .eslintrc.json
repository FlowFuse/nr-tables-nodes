{
	"env": {
		"es2017": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"standard"
	],
	"rules": {
		"comma-dangle": ["warn", "always-multiline"],
		"indent": ["warn", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"max-len":	["warn", 120],
		"no-tabs": "off",
		"semi": ["warn", "always"],
		"space-before-function-paren": ["warn", {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}]
	},
	"plugins": [
		"html"
	],
	"settings": {
		"html/indent": "tab",
		"html/report-bad-indent": "warn"
	}
}
